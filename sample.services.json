{
  // Dashboard HTTP server port (default 9001)
  "port": 9001,
  "hosts": [
    {
      "name": "nas",
      "address": "localhost",
      "nic": [
        "ens10"
      ],
      "systemd_services": [
        "docker.service",
        "nas-dashboard.service:ro"  // :ro suffix makes service read-only (no start/stop/restart)
      ],
      "docker_compose_roots": [
        "/some/folder/"
      ],
      // Watchtower integration: suppress false-positive notifications during container updates
      "watchtower": {
        "port": 8080,                    // Watchtower HTTP API port (default 8080)
        "token": "your-token",
        "update_timeout": 120            // Seconds to wait for container to recover (default 120)
      },
      "traefik": {
        "enabled": true,
        "api_port": 8080
      }
    },
    {
      "name": "anotherhost",
      "address": "192.168.1.9",
      "systemd_services": [
        "docker.service",
        "ollama.service"
      ],
      "docker_compose_roots": [],
      "traefik": {
        "enabled": false,
        "api_port": 8080
      }
    },
    {
      "name": "homeassistant",
      "address": "some.ip.address",
      "homeassistant": {
        "port": 8123,
        "use_https": true,
        "ignore_https_errors": true,
        "is_homeassistant_operatingsystem": true,
        "ssh_addon_port": 22,
      },
      "docker_compose_roots": [],
      "systemd_services": []
    }
  ],
  "gotify": {
    "enabled": true,
    "hostname": "https://gotify.something",
    "token": "a big secret"
  },
  "oidc": {
    "service_url": "https://dash.somehost",
    "callback": "/oidc/callback",
    "config_url": "https://authentik.somehost/application/o/nas/.well-known/openid-configuration",
    "client_id": "someId",
    "client_secret": "someSecret",
    // "groups_claim": "groups",  // Optional: claim name where groups are found (default: "groups")
    // "admin_group": "admin",    // Optional: group name that grants global access (default: "admin")
    "groups": {
      "poweruser": {
        "services": {
          "nas": [
            "docker.service",
            "authentik",
            "audiobookshelf",
            "chrome"
          ],
          "anotherhost": [
            "docker.service",
            "ollama.service"
          ]
        }
      },
      "bookreader": {
        "services": {
          "nas": [
            "docker.service",
            "traefik",
            "audiobookshelf"
          ]
        }
      }
    }
  },
  "local": {
    "admins": "xero"
  }
}