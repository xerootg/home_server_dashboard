[Unit]
Description=Home Server Dashboard - Docker and Systemd service monitor
Documentation=https://github.com/xerootg/home_server_dashboard
After=network.target docker.service
Wants=docker.service

[Service]
Type=simple
ExecStart=/usr/local/bin/nas-dashboard
Restart=on-failure
RestartSec=5

# Configuration path
Environment=CONFIG_PATH=/etc/nas_dashboard/services.json

# Run as a dedicated user
# NOTE: Change this to match the user configured in install.sh
User=@@SERVICE_USER@@
Group=docker

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
PrivateTmp=true
ReadOnlyPaths=/
ReadWritePaths=/var/log /run/faillock

# PAM authentication requires reading /etc/shadow
# Grant capability to bypass file permissions for reading (needed because
# NoNewPrivileges blocks the unix_chkpwd setuid helper)
AmbientCapabilities=CAP_DAC_READ_SEARCH
CapabilityBoundingSet=CAP_DAC_READ_SEARCH

# Allow access to Docker socket
SupplementaryGroups=docker

[Install]
WantedBy=multi-user.target
